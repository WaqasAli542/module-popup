<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="before.body.end">
            <block 	class="Waqas\Popup\Block\Popup"
                      after="-"
            		name="waqas_custom_popup"
                      template="Waqas_Popup::modal_popup.phtml" >
                <arguments>
                    <argument name="view_model"
                              xsi:type="object">Waqas\Popup\ViewModel\PopUpConfig</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
